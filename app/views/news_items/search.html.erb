<div class="row p-5">
  <div class="col-12" style="text-align:center;">
    <u class="h5 text-primary" style="font-weight:bold;">「<%= @keyword %>」の検索結果</u>
  </div>
</div>

<div class="container p-3">
  <div class="list-group p-3">
    <% @news_items.each do |news_item| %>
    <a href="<%= news_item_path(news_item) %>">
      <li class="list-group-item list-group-item-action">
        <h6><%= news_item.title.gsub(/#{@keyword}/, "<b>#{@keyword}</b>").html_safe %></h6>
        </br>
        <p><%= news_item.description.gsub(/#{@keyword}/, "<b>#{@keyword}</b>").html_safe %></p>
      </li>
    </a>  
    <% end %>  
  </div>
  <%= paginate @news_items, theme: 'twitter-bootstrap-4' %>
</div>