<div class="container p-3 mb-5">
  <div class="row">
    <div class="container col-md-6">
      <label for="carouselExampleFade1" class="text-success" style="text-align: center; font-weight:bold;"><u class="text-success">ITトップ</u></label>
      <div id="carouselExampleFade1" class="carousel slide carousel-fade" data-ride="carousel" data-interval="4000" >
        <div class="carousel-inner">
          <% @it_items.each_with_index do |item, i| %>
            <a href="<%= news_item_path(item) %>" class="carousel-item <%= i == 0 ? 'active' : '' %>">
              <img src="<%= item.thumbnail_url %>" alt="<%= item.title %>" width="100%" height="400" style="object-fit: cover;" class="carousel-image"/>
              <div class="carousel-caption d-none d-md-block">
                <h5 style="font-weight:bold; text-white"><%= item.title %></h5></br>
                <p><%= item.description %></p>
              </div>
            </a>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade1" role="button" data-slide="prev">
          <i class="fas fa-angle-left fa-3x" style="color:silver"></i>
          <!---<span class="sr-only">Previous</span>--->
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade1" role="button" data-slide="next">
          <i class="fas fa-angle-right fa-3x" style="color:silver"></i>
          <!---<span class="sr-only">Next</span>--->
        </a>
      </div>
    </div>
    <div class="container col-md-6">
      <label for="carouselExampleFade2" class="text-success" style="text-align: center; font-weight:bold;"><u class="text-success">経済トップ</u></label>
      <div id="carouselExampleFade2" class="carousel slide carousel-fade" data-ride="carousel" data-interval="4000" >
        <div class="carousel-inner">
          <% @economy_items.each_with_index do |item, i| %>
            <a href="<%= news_item_path(item) %>" class="carousel-item <%= i == 0 ? 'active' : '' %>">
              <img src="<%= item.thumbnail_url %>" alt="<%= item.title %>" width="100%" height="400" style="object-fit: cover;" class="carousel-image"/>
              <div class="carousel-caption d-none d-md-block">
                <h5 style="font-weight:bold; text-white"><%= item.title %></h5></br>
                <p><%= item.description %></p>
              </div>
            </a>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade2" role="button" data-slide="prev">
          <i class="fas fa-angle-left fa-3x" style="color:silver"></i>
          <!---<span class="sr-only">Previous</span>-->
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade1" role="button" data-slide="next">
          <i class="fas fa-angle-right fa-3x" style="color:silver"></i>
          <!--<span class="sr-only">Next</span>-->
        </a>
      </div>
    </div>
  </div>
</div>

