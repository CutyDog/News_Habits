<p id="notice"><%= notice %></p>

<h1>News Sites</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rss url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_sites.each do |news_site| %>
      <tr>
        <td><%= news_site.title %></td>
        <td><%= news_site.rss_url %></td>
        <td><%= link_to 'Show', news_site %></td>
        <td><%= link_to 'Edit', edit_news_site_path(news_site) %></td>
        <td><%= link_to 'Destroy', news_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Site', new_news_site_path %>
